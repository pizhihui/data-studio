{
  "compilerOptions": {
    /*  */
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,

    /*  */
    "target": "es6",
    "module": "esnext",

    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    /* type roots */
    "typeRoots": ["./app/types", "./node_modules/@types"]
  }
}
